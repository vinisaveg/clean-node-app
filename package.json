{
  "name": "next-unicorn-project-server",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/vinisaveg/next-unicorn-project-server.git",
  "author": "vinisaveg",
  "license": "MIT",
  "scripts": {
    "build": "rm -r build & tsc",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "start": "node build/index.js",
    "test": "jest --no-cache",
    "up": "docker-compose -f docker-compose.yaml up -d",
    "down": "docker-compose -f docker-compose.yaml down",
    "lint:check": "eslint ./src --ext .ts",
    "lint:fix": "eslint ./src --ext .ts --fix",
    "prettier:check": "prettier --check src/**/*.ts ",
    "prettier:fix": "prettier --write src/**/*.ts"
  },
  "devDependencies": {
    "@faker-js/faker": "^6.0.0",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.21",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "eslint": "^8.10.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.3",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "mongodb": "^4.4.1"
  }
}
